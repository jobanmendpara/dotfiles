# Add an on_enter command to modes
:: default : yabai -m config active_window_border_color 0xFFF38BA8
:: open @ : yabai -m config active_window_border_color  0xFFCBA6F7
:: yabai @ : yabai -m config active_window_border_color 0xFFF9E2AF

# Add enter and exit commands for modes
hyper - o ; open
hyper - y ; yabai

open < escape ; default
open < hyper - y ; yabai

yabai < escape ; default
yabai < hyper - o ; open

# Mode specific bindings
open < c : open /System/Applications/Calendar.app ; skhd -k "escape"
open < b : open /Applications/Arc.app ; skhd -k "escape"
open < m : open /System/Applications/Messages.app ; skhd -k "escape"
open < n : open /System/Applications/Notes.app ; skhd -k "escape"
open < r : open /System/Applications/Reminders.app ; skhd -k "escape"
open < t : open /Applications/WezTerm.app ; skhd -k "escape"

yabai < s : yabai -m space --layout stack
yabai < b : yabai -m space --layout bsp

yabai < left : yabai -m window --focus west
yabai < down : yabai -m window --focus south
yabai < up : yabai -m window --focus north
yabai < right : yabai -m window --focus east

yabai < shift - left : yabai -m window --swap west
yabai < shift - down : yabai -m window --swap south
yabai < shift - up : yabai -m window --swap north
yabai < shift - right : yabai -m window --swap east

yabai < shift + cmd - left : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
yabai < shift + cmd - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

yabai < ctrl - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
yabai < ctrl - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
yabai < ctrl - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
yabai < ctrl - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

yabai < e : yabai -m space --balance

yabai < r : yabai -m space --rotate 270
yabai < shift - r : yabai -m space --rotate 90

yabai < x : yabai -m space --mirror x-axis
yabai < y : yabai -m space --mirror y-axis

yabai < f : yabai -m window --toggle float;
